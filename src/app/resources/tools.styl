@require vars

.toolbar-items
    align-items flex-end
    bottom 16px
    display flex
    justify-content center
    left calc(50% - (150px / 2))
    position absolute
    > button
        margin .1em
@media (max-width: 600px)
    .toolbar-items
        bottom calc(50% - (150px / 2))
        flex-direction column
        left 16px

.selected-tool-container
    height 75%
    max-width 33.33%
    min-width 350px
    overflow-y auto
    position absolute
    right 8px
    top $below-banner + 8px
    z-index $map-z-index + 1
